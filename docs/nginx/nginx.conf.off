# Gzip Compression
    gzip on;
    gzip_types text/plain application/xml text/css application/javascript;

    # Default Server
    server {
        listen 80;
        server_name mymiwallet.com www.mymiwallet.com;
        return 301 https://$host$request_uri;
    }

    # HTTPS Server
    server {
        listen 443 ssl;
        server_name mymiwallet.com www.mymiwallet.com;

        # SSL Certificates
        ssl_certificate /home/mymiteam/ssl/mymiwallet.com.crt;
        ssl_certificate_key /home/mymiteam/ssl/mymiwallet.com.key;

        # Root Directory
        root /home/mymiteam/public;
        index index.php index.html;

        # Make sure the browser doesn't see an old CSP if upstream set one
        add_header Content-Security-Policy "" always;

        # Critical reverse-proxy headers (propagate DreamHost outer proxy details)
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host  $host;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;

        # Remove /index.php
        location / {
            try_files $uri $uri/ /index.php?$query_string;
        }

        location /assets/ {
            root  /home/mymiteam/mymiwallet/site/current/public;
            try_files $uri $uri/ =404;
            access_log off;
            expires 30d;
        }

        location ~* /index.php/ {
            rewrite ^/index.php/(.*)$ /$1 last;
        }

        # PHP-FPM Configuration
        location ~ \.php$ {
            include /home/mymiteam/mymiwallet/site/current/fastcgi_params;
            fastcgi_pass 127.0.0.1:9000;
            fastcgi_index index.php;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
            fastcgi_param HTTP_X_FORWARDED_PROTO $scheme;
        }

        # WebSocket Proxy
        location /ws/ {
            proxy_pass http://127.0.0.1:8081; # Ensure this matches the WebSocket server port
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_read_timeout 60s;
            proxy_send_timeout 60s;
        }
    }
}